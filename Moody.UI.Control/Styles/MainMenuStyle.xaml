<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Moody.UI.Control">


    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="FontSizes.xaml" />
        <ResourceDictionary Source="Colors.xaml"/>
    </ResourceDictionary.MergedDictionaries>


    <Style x:Key="HyperlinkStyle" TargetType="{x:Type Hyperlink}">
        <Setter Property="FontSize" Value="{StaticResource MainMenuTextSize}"></Setter>
        <Setter Property="Foreground" Value="{StaticResource BrushTextIcon}"></Setter>
    </Style>

    <Style x:Key="LinkStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource MainMenuTextSize}"/>
        <Setter Property="Foreground" Value="{StaticResource BrushTextIcon}"/>
    </Style>
</ResourceDictionary>

