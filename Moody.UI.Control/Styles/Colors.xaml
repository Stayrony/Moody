<!-- Palette generated by Material Palette - materialpalette.com/brown/pink -->


<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Moody.UI.Control">

    <Color x:Key="ColorPrimary">#795548</Color>
    <!-- #FF4081 -->
    <Color x:Key="ColorPrimaryDark">#5D4037</Color>
    <Color x:Key="ColorPrimaryLight">#D7CCC8</Color>
    <Color x:Key="ColorAccent">#795548</Color>
    <Color x:Key="ColorPrimaryText">#212121</Color>
    <Color x:Key="ColorSecondaryText">#727272</Color>
    <Color x:Key="ColorTextIcons">#FFFFFF</Color>
    <Color x:Key="ColorDivider">#B6B6B6</Color>

    <Color x:Key="ColorBackground">#E8E8E8</Color>

    <SolidColorBrush x:Key="BrushPrimary" Color="{StaticResource ColorPrimary}" />
    <SolidColorBrush x:Key="BrushPrimaryDark" Color="{StaticResource ColorPrimaryDark}" />
    <SolidColorBrush x:Key="BrushPrimaryLight" Color="{StaticResource ColorPrimaryLight}" />
    <SolidColorBrush x:Key="BrushAccent" Color="{StaticResource ColorAccent}" />
    <SolidColorBrush x:Key="BrushPrimaryText" Color="{StaticResource ColorPrimaryText}" />
    <SolidColorBrush x:Key="BrushSecondaryText" Color="{StaticResource ColorSecondaryText}" />
    <SolidColorBrush x:Key="BrushTextIcon" Color="{StaticResource ColorTextIcons}" />
    <SolidColorBrush x:Key="BrushDivider" Color="{StaticResource ColorDivider}" />

    <SolidColorBrush x:Key="BrushBackground" Color="{StaticResource ColorBackground}"/>

</ResourceDictionary>